# Checkar md5sum
md5sum iso nfdos.iso

# Limpar Grub
sudo apt-get purge $( dpkg --list | grep -P -o "linux-image-\d\S+" | grep -v $(uname -r | grep -P -o ".+\d") )
sudo update-grub2

# Criar senha cripto 
mkpasswd -m sha-512

# Py
sudo apt install python3-pip -y
sudo pip3 install virtualenv 
virtualenv env
source env/bin/activate

# MK Docs
pip install mkdocs
mkdocs new .

sudo apt-get install p7zip-full p7zip-rar
7z x nfdos.iso
mkisofs -o src/ nfdos-server.iso

sudo apt install cinnamon-desktop-environment

Unsquash: https://www.youtube.com/watch?v=1mMXzgzHeE4&ab_channel=KrisOcchipinti

https://core.docs.ubuntu.com/en/image/image-building
echo -e "$inicio_cor Instalando LXD ... $fim_cor"
# LEMBRETES: https://www.cyberciti.biz/faq/install-lxd-on-ubuntu-20-04-lts-using-apt/
snap install lxd
adduser $USER lxd
newgrp lxd

